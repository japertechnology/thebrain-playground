    "#Find the HomeThought\n",
    "brainscan = get('brainscan')\n",
    "process_response(brainscan)\n",
    "homeThought = brainscan.json()['homeThoughtId']\n",
    "\n",
    "# Find/Create XKCD Root (defaults to child of homeThought)\n",
    "xkcd_root = get(\"getNamedItem\", search=\"xkcd\")\n",
    "\n",
    "if xkcd_root.status_code == 404:\n",
    "    print(\"Creating new parent\")\n",
    "    xk_root_model = {\n",
    "    \"name\": 'xkcd',\n",
    "    \"kind\": 1,\n",
    "    \"sourceThoughtId\": homeThought,\n",
    "    \"relation\": 1,\n",
    "    \"acType\": 0\n",
    "    }\n",
    "    xkcd_root= createThought(xk_root_model)\n",
    "    xkcd_root_id = xkcd_root.json()\n",
    "elif xkcd_root.status_code == 200:\n",
    "    xkcd_root_id = xkcd_root.json()['id']\n",
    "\n",
    "print(\"HomeThought: \"+ homeThought)\n",
    "print(\"XKCD Root ID: \" + xkcd_root_id)"
   ]
